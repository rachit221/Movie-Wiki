<%- include("./partials/header")%>
<!--Main Page-->
<div class="container" style="background-color: rgb(2,46,72);">
    <h1 style="color: white;"><%=movie.Title%></h1>
    <!--Card-->
  <div class="card flex-row flex-wrap">
    <div class="card-header border-0">
      <img src="<%=movie.Poster%>" alt="Poster" width="350" height="450" />
    </div>
    <div class="card-block px-2">
      <h4 class="card-title"><%=movie.Title%></h4>
      <p class="card-text"><%=movie.Plot%></p>
      <p class="card-text">Director: <%=movie.Director%></p>
      <p class="card-text">IMDb Rating: <%=movie.imdbRating%></p>
      <p class="card-text">Actors: <%=movie.Actors%></p>
      <p class="card-text">Writers: <%=movie.Writer%></p>
      <p class="card-text">Year: <%=movie.Year%></p>
      <p class="card-text">Type: <%=movie.Type%></p>
      <p class="card-text">Genre: <%=movie.Genre%></p>
      <p class="card-text">Runtime: <%=movie.Runtime%></p>
    </div>
    <div class="w-100"></div>
    <div class="card-footer w-100 text-muted">Box Office: <%=movie.BoxOffice%></div>
  </div>
</div>
<%- include("./partials/footer")%>
